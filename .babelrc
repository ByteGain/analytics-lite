{
  "presets": [
    [
      "env",
      {
        "targets": {
          "browsers": [
            "IE >= 11",
          "FireFox >= 24",
          "Safari >= 7",
          "last 2 versions"
          ]
        },
        "modules": false,
        "plugins": [
          "external-helpers"
        ],
      }
    ]
  ],
  "env": {
    "test": {
      "presets": [
        ["env", { "modules": "commonjs" }]
      ]
    }
  },
  "ignore": [
    "node_modules"
  ]
}
